<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    

    <div class="div-flex">
      <div id="div-list-products" class="div-left">
        <% if (productos.length > 0){ %>
          <h1>Lista de productos:</h1>                
          <div class="divTable">
              <div class="headRow">
                  <div  class="divCell"><p>Nombre</p></div>
                  <div  class="divCell"><p>Precio</p></div>
                  <div  class="divCell"><p>Foto</p></div>
              </div>

              <% for (let i = 0; i < productos.length; i++) { %>         
                  <div class="divRow">
                      <div class="divCell"><p><%=productos[i].title%></p></div>
                      <div class="divCell"><p><%=productos[i].price%></p></div>
                      <div class="divCell"><img class="pequeña" src="<%=productos[i].thumbnail%>" alt="imagen-producto"></div>
                      <button id="<%=productos[i].title%>-<%=productos[i].price%>" class="divCell" onclick="agregarProducto(this.id)">Agregar al carrito</button>
                  </div>
              <% } %>       
          </div>  
      <% } else { %>
          <h1>No hay productos</h1>
      <% } %>
    </div>
      <div class="div-right">
        <% if (usuario){ %>

          <div class="user">
            <h1><%=usuario%></h1>
            <button class="btn-log"><a href="logout">Desloguear</a></button>

            <p>Tus datos:</p>
            <p>Nombre: <%=nombre%></p>
            <p>Dirección: <%=direccion%></p>
            <p>Edad: <%=edad%></p>
            <p>Teléfono: <%=telefono%></p>

            <h2>Carrito:</h2>
            <div id="div-cart-products" class="carrito"></div>
          </div>

        <% } %> 
      </div>
    </div>
  

    <h2>Centro de Mensajes</h2>
    <form onsubmit="enviarMsg(); return false">
      <input
        class="input-field"
        id="input-email"
        type="text"
        placeholder="Email"
        required
      /><br />
      <input
        class="input-field"
        id="input-nombre"
        type="text"
        placeholder="Nombre"
        required
      /><br />
      <input
        class="input-field"
        id="input-apellido"
        type="text"
        placeholder="Apellido"
        required
      /><br />
      <input
        class="input-field"
        id="input-edad"
        type="text"
        placeholder="Edad"
        required
      /><br />
      <input
        class="input-field"
        id="input-alias"
        type="text"
        placeholder="Alias"
        required
      /><br />
      <input
        class="input-field"
        id="input-avatar"
        type="text"
        placeholder="URL de avatar"
        required
      /><br />
      <div class="chat" id="div-list-msgs"></div>
      <input
        class="input-field"
        id="input-msg"
        type="text"
        placeholder="Mensaje"
      />
      <input type="submit" value="Enviar!" class="action-button" />
    </form>
  </body>
</html>
